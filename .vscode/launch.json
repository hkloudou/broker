    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/app/broker",
            "args": [
                "-tls",
                "-tls_ca_path",
                "./test/server/ca.pem",
                "-tls_cert_path",
                "./test/server/server.pem",
                "-tls_key_path",
                "./test/server/server.key",
                "-tls_verify_client"
            ]
        }
    ]
